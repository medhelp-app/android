<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.medhelp.medhelp.LoginActivity" >

    <ImageView
        android:src="@drawable/medhelp_name"
        android:id="@+id/image_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="64dp"
        android:paddingTop="12dp"
        android:layout_gravity="center_horizontal" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_email_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_logo" >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/input_email_login"
            android:layout_gravity="center_horizontal"
            android:hint="Email"
            android:textColor="@color/colorText"
            android:textIsSelectable="false"
            android:backgroundTint="@color/colorText"
            android:textColorHint="@color/colorText"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_password_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/input_layout_email_login" >

        <EditText
            android:id="@+id/input_password_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:layout_gravity="center_horizontal"
            android:hint="Senha"
            android:textColorHint="@color/colorText"
            android:textColor="@color/colorText"
            android:backgroundTint="@color/colorText"
            android:layout_below="@+id/input_email_login"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/link_forgotPassword_login"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="36dp"
        android:paddingBottom="12dp"
        android:text="Esqueceu sua senha?"
        android:gravity="center"
        android:textSize="16sp"
        android:clickable="true"
        android:textColor="@color/colorText"
        android:layout_below="@+id/input_layout_password_login"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btn_login_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Entrar"
        android:textColor="@color/colorText"
        android:background="@color/colorButton"
        android:layout_above="@+id/btn_signup_login"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btn_signup_login"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Cadastre-se"
        android:textColor="@color/colorButton"
        android:background="@color/colorText"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"  />

</RelativeLayout>

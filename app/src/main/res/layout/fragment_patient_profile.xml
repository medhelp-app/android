<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.medhelp.medhelp.PatientProfileFragment">

    <de.hdodenhof.circleimageview.CircleImageView
        android:src="@drawable/blank_profile"
        android:id="@+id/profile_image_patient"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_margin="50dp"
        android:layout_centerHorizontal="true" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/profile_image_patient">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/row_name_patientProfile"
                android:layout_marginBottom="@dimen/default_margin"
                android:layout_centerHorizontal="true">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/default_margin">

                    <ImageView
                        android:layout_width="@dimen/material_icons"
                        android:layout_height="@dimen/material_icons"
                        android:id="@+id/profile_icon_patient"
                        android:background="@drawable/ic_account_circle_black_24dp"
                        android:layout_marginLeft="@dimen/default_margin" />

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_name_patientProfile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textEmailAddress"
                            android:ems="10"
                            android:hint="Nome"
                            android:id="@+id/input_name_patientProfile"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/colorText"
                            android:backgroundTint="@color/colorText"
                            android:textColorHint="@color/colorText"/>

                    </android.support.design.widget.TextInputLayout>
                </TableRow>
            </TableLayout>

            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/row_mail_patientProfile"
                android:layout_below="@+id/row_name_patientProfile"
                android:layout_marginBottom="@dimen/default_margin"
                android:layout_centerHorizontal="true">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/default_margin">

                    <ImageView
                        android:layout_width="@dimen/material_icons"
                        android:layout_height="@dimen/material_icons"
                        android:id="@+id/profile_icon_patient2"
                        android:background="@drawable/ic_mail_black_24dp"
                        android:layout_marginLeft="@dimen/default_margin" />

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_mail_patientProfile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textEmailAddress"
                            android:ems="10"
                            android:hint="Email"
                            android:id="@+id/input_mail_patientProfile2"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/colorText"
                            android:backgroundTint="@color/colorText"
                            android:textColorHint="@color/colorText"/>

                    </android.support.design.widget.TextInputLayout>
                </TableRow>

            </TableLayout>

            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/row_location_patientProfile"
                android:layout_below="@+id/row_mail_patientProfile"
                android:layout_marginBottom="@dimen/default_margin"
                android:layout_centerHorizontal="true">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/default_margin">

                    <ImageView
                        android:layout_width="@dimen/material_icons"
                        android:layout_height="@dimen/material_icons"
                        android:id="@+id/icon_location_patientProfile"
                        android:background="@drawable/ic_location_on_black_24dp"
                        android:layout_marginLeft="@dimen/default_margin" />

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_location_patientProfile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textEmailAddress"
                            android:ems="10"
                            android:hint="EndereÃ§o"
                            android:id="@+id/input_location_patientProfile"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/colorText"
                            android:backgroundTint="@color/colorText"
                            android:textColorHint="@color/colorText"/>

                    </android.support.design.widget.TextInputLayout>
                </TableRow>
            </TableLayout>

            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/row_phone_patientProfile"
                android:layout_below="@+id/row_location_patientProfile"
                android:layout_marginBottom="@dimen/default_margin"
                android:layout_centerHorizontal="true">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/default_margin">

                    <ImageView
                        android:layout_width="@dimen/material_icons"
                        android:layout_height="@dimen/material_icons"
                        android:id="@+id/icon_phone_patientProfile"
                        android:background="@drawable/ic_call_black_24dp"
                        android:layout_marginLeft="@dimen/default_margin" />

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_phone_patientProfile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textEmailAddress"
                            android:ems="10"
                            android:hint="Telefone"
                            android:id="@+id/input_phone_patientProfile"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/colorText"
                            android:backgroundTint="@color/colorText"
                            android:textColorHint="@color/colorText"/>

                    </android.support.design.widget.TextInputLayout>
                </TableRow>
            </TableLayout>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/image_body_patientProfile"
                android:background="@drawable/ic_accessibility_black_24dp"
                android:layout_below="@+id/row_phone_patientProfile"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>

    </android.support.v4.widget.NestedScrollView>

</RelativeLayout>

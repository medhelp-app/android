<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.medhelp.medhelp.SignUpActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/input_name_signup"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="135dp"
        android:hint="Nome"
        android:textColor="#ffffff"
        android:textIsSelectable="false"
        android:backgroundTint="#ffffff"
        android:textColorHint="#ffffff" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/input_email_signup"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/input_name_signup"
        android:hint="Email"
        android:textColor="#ffffff"
        android:textIsSelectable="false"
        android:backgroundTint="#ffffff"
        android:textColorHint="#ffffff" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:id="@+id/input_password_signup"
        android:layout_below="@+id/input_email_signup"
        android:hint="Senha"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:textIsSelectable="false"
        android:backgroundTint="#ffffff"
        android:textColorHint="#ffffff" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:id="@+id/input_confirmationPassword_signup"
        android:layout_below="@+id/input_password_signup"
        android:hint="Confirmição da senha"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:textIsSelectable="false"
        android:backgroundTint="#ffffff"
        android:textColorHint="#ffffff" />

    <Button
        android:id="@+id/btn_signup_signup"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Cadstrar"
        android:textColor="#ffffff"
        android:background="#0099e6"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
